\begin_inset Formula 
\begin{align*}
\by_{t} & =\PhiB_{0}+\PhiB_{1}\by_{t-1}+\PhiB_{2}\by_{t-2}+\epsilonB_{t}\\
\\
\left[\begin{array}{c}
y_{1,t}\\
y_{2,t}
\end{array}\right] & =\left[\begin{array}{c}
\phi_{1,0}\\
\phi_{2,0}
\end{array}\right]+\left[\begin{array}{cc}
\phi_{11,1} & \phi_{12,1}\\
\phi_{21,1} & \phi_{22,1}
\end{array}\right]\left[\begin{array}{c}
y_{1,t-1}\\
y_{2,t-1}
\end{array}\right]+\left[\begin{array}{cc}
\phi_{11,2} & \phi_{12,2}\\
\phi_{21,2} & \phi_{22,2}
\end{array}\right]\left[\begin{array}{c}
y_{1,t-2}\\
y_{2,t-1}
\end{array}\right]+\left[\begin{array}{c}
\epsilon_{1,t-2}\\
\epsilon_{2,t-1}
\end{array}\right]
\end{align*}

\end_inset


