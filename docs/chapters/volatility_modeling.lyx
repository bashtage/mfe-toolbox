\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\sigma_{\delta}^{2}=\omega+\sum_{p=1}^{P}\alpha_{p}|\epsilon_{t-p}|^{\delta}+\sum_{o=1}^{O}\gamma_{o}|\epsilon_{t-o}|^{\delta}I_{[\epsilon_{t-o}<0]}+\sum_{q=1}^{Q}\beta_{q}\sigma_{t-q}^{\delta}
\]

\end_inset


